section#newsletters
	div.well.container
			div.row.center.wow.fadeInDown 
				h2 Newsletters
			
				if newsletters.current
					div.col-md-4.col-sm-4.col-xs-12.wow.fadeInDown
						fieldset.wow.fadeInDown
							legend Current
							table.table.table-hover
								each current in newsletters.current
									tr
										td.wow.fadeInLeft
											a(target="_blank" href="#{current.url}")
												p #{current.name}
			
				if newsletters.archives
					div.col-md-6.col-sm-6.col-xs-12.wow.fadeInDown
						fieldset.wow.fadeInDown
							legend Archives
						
							.tab-wrap.well
								.media
									.parrent.pull-left
										ul.nav.nav-tabs.nav-stacked
											- var firstTabAdded=false;
											each archive in newsletters.archives
												- var year=archive.year;
												- var idForTab="tab_"+year;
												if !firstTabAdded
													-firstTabAdded=true;
													li.active.tabheader
														a(href="##{idForTab}" data-toggle="tab") #{year}
												else 
													li.tabheader
														a(href="##{idForTab}" data-toggle="tab") #{year}     
		
											
									.parrent.media-body
										.tab-content
											- firstTabAdded=false;
											each archive in newsletters.archives
												- var year=archive.year;
												- var idForTab="tab_"+year;
												if !firstTabAdded
													- firstTabAdded=true;
													.tab-pane.active.in(id="#{idForTab}")
														.media
															.media-body
																table.table.table-hover
																	each edition in archive.editions
																		tr
																			td.wow.fixfadeInDown
																				a(target="_blank" href="#{edition.url}")
																					p #{edition.name}
												else
													.tab-pane(id="#{idForTab}")
														.media
															.media-body
																table.table.table-hover
																	each edition in archive.editions
																		tr
																			td.wow.fixfadeInDown
																				a(target="_blank" href="#{edition.url}")
																					p #{edition.name}		