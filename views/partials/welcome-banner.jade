	div.carousel.slide
		ol.carousel-indicators
			li.active(data-target="#main-slider" data-slide-to="0")
			li(data-target="#main-slider" data-slide-to="1")
			li(data-target="#main-slider" data-slide-to="2")
		div.carousel-inner
			div.item.active(style="background-image: url(images/bagc/bg.png)")
				div.container
					div.row.slide-margin.mainheader
						div.col-sm-12.col-cs-12
							h1.center.wow.fadeInDown Bengali Association of Greater Chicago
