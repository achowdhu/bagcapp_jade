						div.col-sm-6.col-xs-12
							h2.animation.animated-item-2 Celeberating 50 Years of Bengali Culture and Heritage
							div.animation.animated-item-3
								img.img-responsive(src="images/bagc/banner.jpg")
							
							
						
						div.col-sm-6.col-xs-12
							div.animation.animated-item-1.woo.fadeInRight
								h2.animation Message for you
								div.embed-responsive.embed-responsive-16by9
